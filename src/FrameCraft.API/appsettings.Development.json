{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost,1433;Database=CsoMaster;User Id=sa;Password=FrameCraft123!;TrustServerCertificate=True;MultipleActiveResultSets=true"
  },
  "AWS": {
    "S3": {
      "AccessKey": "test",
      "SecretKey": "test",
      "BucketName": "framecraft-dev",
      "Region": "eu-central-1",
      "UseLocalStack": true,
      "LocalStackEndpoint": "http://localhost:4566",
      "MaxFileSizeMB": 10,
      "AllowedExtensions": ".jpg,.jpeg,.png,.gif,.webp,.bmp,.pdf,.doc,.docx,.xls,.xlsx",
      "PreSignedUrlTtlMinutes": 15,
      "MaxPreSignedUrlTtlMinutes": 60,
      "EnableMimeValidation": true
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] [{CorrelationId}] [{TenantId}] [{Module}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/framecraft-dev-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{CorrelationId}] [{TenantId}] [{UserId}] [{Module}] {SourceContext}{NewLine}{Message:lj}{NewLine}{Exception}",
          "shared": true
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      }
    ]
  },
  "Seq": {
    "ServerUrl": "http://localhost:5341"
  }
}
